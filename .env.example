# Monetra Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# NextAuth Configuration
# ============================================

# Secret key for encrypting NextAuth tokens and sessions
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# The canonical URL where your frontend is accessible
# Examples: http://localhost:3000, http://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Application Settings
# ============================================

# Default currency for the application (ISO 4217 code)
# Examples: USD, CAD, EUR, GBP
DEFAULT_CURRENCY=CAD

# AlphaVantage API key for stock quotes and FX rates
# Get a free key at: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your-api-key-here

# ============================================
# Backend URLs
# ============================================

# Backend URL for server-side Next.js API routes (inside Docker network)
# Use 'backend:8000' for Docker, 'localhost:8000' for local dev outside Docker
BACKEND_URL=http://backend:8000

# Backend URL for client-side browser requests
# Must be accessible from user's browser
# Examples: http://localhost:8000, http://your-hostname:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ============================================
# CORS Configuration
# ============================================

# Frontend origin for CORS policy
# Must exactly match your frontend URL (protocol + hostname + port)
# Examples: http://localhost:3000, http://your-hostname:3000
FRONTEND_ORIGIN=http://localhost:3000
